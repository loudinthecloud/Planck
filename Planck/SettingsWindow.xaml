<Window x:Class="Planck.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="160" Width="250" ResizeMode="NoResize" Loaded="Window_Loaded_1" WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel HorizontalAlignment="Center" Margin="0,4,0,0">

        <StackPanel Orientation="Horizontal" Margin="0,5,0,10" >
            <Label Content="Pomodoro Duration:" Width="125" />
            <TextBox Name="txtPDuration" Width="60" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
            <Label Content="Break Duration:" Width="125" />
            <TextBox Name="txtBDuration" Width="60" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="_Ok" IsDefault="True" Width="80" Margin="5,5,5,5" Click="Button_Click_1" />
            <Button Content="_Cancel" IsCancel="True" Width="80" Margin="5,5,5,5" Click="Button_Click_2" />
        </StackPanel>
    </StackPanel>
</Window>
