<Window x:Class="Planck.WindowNewTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Task" Height="80" Width="385" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid FocusManager.FocusedElement="{Binding ElementName=txtName}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Task Name:" />
            <TextBox Name="txtName" Width="200" Margin="10,0,0,0" TabIndex="1" />
            <Button Name="btnGo" Content="Start" Width="60" Margin="10,0,0,0" TabIndex="2" Click="btnGo_Click" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
